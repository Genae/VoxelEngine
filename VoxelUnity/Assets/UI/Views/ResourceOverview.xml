<ResourceOverview>
  <Group Alignment="TopLeft" Orientation="Horizontal" Margin="25px,0px,25px,0px">
    <Label Text="Defense: {Lives}" FontSize="25"></Label>
    <Label Text="Wealth: {Gold}" FontSize="25"></Label>
    <Button Click="IncreaseDefense" Text="Increase Defense (Cost: {Lives})" FontSize="25" Width="300px" IsDisabled="{Disabled}"></Button>
  </Group>
  <Group Width="100%" Height="100%" Alpha="0.7" BackgroundColor="grey" IsVisible="{Lost}"></Group>
  <Group Alignment="Center" Orientation="Vertical" Margin="70px,70px,70px,70px">
    <Label FontSize="100" Text="You Lost!" Alignment="Center" IsVisible="{Lost}"></Label>
    <Button Click="RetryLevel" Text="Retry Level" Width="230px" IsVisible="{Lost}"></Button>
  </Group>
</ResourceOverview>